{
  "name": "tingatalk-backend",
  "version": "1.0.0",
  "description": "Backend server for TingaTalk video calling app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop tingatalk-backend",
    "pm2:restart": "pm2 restart tingatalk-backend",
    "pm2:delete": "pm2 delete tingatalk-backend",
    "pm2:logs": "pm2 logs tingatalk-backend",
    "pm2:status": "pm2 status",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "twilio",
    "video",
    "calling",
    "websocket",
    "flutter"
  ],
  "author": "TingaTalk Team",
  "license": "MIT",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "razorpay": "^2.9.3",
    "socket.io": "^4.7.5",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
