# TingaTalk Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# ===========================================
# Twilio Configuration (Required for video calls)
# ===========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# Razorpay Configuration (Required for payments)
# ===========================================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxx
RAZORPAYX_ACCOUNT_NUMBER=xxxxxxxxxxxx

# ===========================================
# Firebase Configuration
# ===========================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_SERVICE_ACCOUNT=./firebase_service_account.json
# Alternative: Set GOOGLE_APPLICATION_CREDENTIALS env var

# ===========================================
# Redis Configuration (Optional - for clustering)
# ===========================================
REDIS_URL=redis://127.0.0.1:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Clustering Configuration
# ===========================================
ENABLE_CLUSTERING=false
INSTANCE_ID=0

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=*

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# ===========================================
# Security
# ===========================================
TRUST_PROXY=true
HELMET_ENABLED=true